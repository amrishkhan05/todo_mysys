<% for(var i = 0; i < todo.length; i++) { %>
<tr>
    <td><%= i + 1 %></td>
    <td><%= todo[i].name %></td>
    <td><%= todo[i].description %></td>
    <td><%= todo[i].date %></td>
    <td><%= todo[i].status %></td>
    <td>
        <a href="/update-todo?id=<%= todo[i]._id%>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id=<%= todo[i]._id%> >
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
</tr>
<% } %>